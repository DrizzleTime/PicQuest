@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudText Typo="Typo.h5">
            PicQuest
        </MudText>
        <MudSpacer/>
        <a href="https://github.com/DrizzleTime/PicQuest" target="_blank">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Style="color: white"/>
        </a>
    </MudAppBar>
    <MudMainContent Class="main">
        @Body
    </MudMainContent>
</MudLayout>

<style>
    .main {
        background: linear-gradient(135deg, #f5f7fa 0%, #eef2f7 100%);
        padding-bottom: 2rem;
        height: 100vh;
        overflow: auto;
    }
</style>

